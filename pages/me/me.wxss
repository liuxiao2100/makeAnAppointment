  height:1080rpx;
  background-color:rgb(246, 246, 246);
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  align-items:center;
  }

.me-top {
  background-color:rgb(34, 176, 228);
  height:350rpx;
  display:flex;
  justify-content:center;
  flex-direction:column;
  align-items:center;
  margin-top:0rpx;
  padding-bottom:0rpx;
  margin-bottom:0rpx;
  border-bottom-left-radius:60rpx;
  border-bottom-right-radius:60rpx;
  padding-top:0rpx;
  width:100%;
}

.me-top-text {
  color:rgb(255, 255, 255);
  padding-top:0rpx;
  padding-bottom:52rpx;
  margin-top:0rpx;
}

.me-top-view {
  height:300rpx;
  background-color:rgb(255, 255, 255);
  width:90%;
  margin-top:0rpx;
  margin-bottom:-200rpx;
  padding-bottom:0rpx;
  padding-top:0rpx;
  display:flex;
  justify-content:flex-start;
  align-items:center;
  border-radius:40rpx;
}

